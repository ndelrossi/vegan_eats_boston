<% provide(:title, 'Create Post') %>

<div class="row">
  <div class="form-group col-md-6 col-md-offset-3">
    <h1 class="text-center">Create Post</h1>
    
    <p>Note: Your post will not show up on the front page until it is approved by an admin.</p>

    <%= form_for(@post) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Image (Optional but recommended)" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: "wysihtml5", rows: "15" %>
      </div>

      <%= f.submit "Create post", class: "btn btn-large btn-primary" %>
      
    <% end %>
  </div>
</div>

<script type="text/javascript">

  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  }) 

</script>
