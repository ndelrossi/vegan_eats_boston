<h4>Posts:</h4>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Date Posted</th>
      <th>Control</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |p| %>
    <tr>
      <td><%= link_to p.user.name, p.user %></td>
      <td><%= link_to p.title, p %></td>
      <td><%= localize(p.created_at, :format => :long) %></td>
      <td>
        <% if p.approved then %>
          <%= link_to "unapprove", unapprove_post_path(p), method: :put %>
        <% else %>
          <%= link_to "approve", approve_post_path(p), method: :put %>
        <% end %>
        / <%= link_to "edit", edit_post_path(p) %>
        / <%= link_to "delete", p, method: :delete,
                                    data: { confirm: "Delete this post?" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
