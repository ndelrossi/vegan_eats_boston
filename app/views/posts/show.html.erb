<% provide(:title, 'Post') %>

<div class="posts">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @post.title %></h1>
      <span class="timestamp">
        Posted by <%= link_to @post.user.name, @post.user %>
        <%= time_ago_in_words(@post.created_at) %> ago.
        <% if @post.user == current_user %>
          <%= link_to "edit", edit_post_path(@post) %>
          <%= link_to "delete", @post, method: :delete,
                                        data: { confirm: "Delete this post?" } %>
        <% end %>
      </span>
      <span >
        <% if @post.image? then %>
          <%= image_tag @post.image.url, :class => "img-responsive postimage" %>
        <% end %>
      </span>
      <span class="content"><%= @post.content.html_safe %></span>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h4><%= pluralize(@post.comments.count, 'comment') %></h4>
    <%= render 'shared/comment_form' %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h4>Newest</h4>
    <ol class="comments">
      <%= render @comments %>
    </ol>
  </div>
</div>
