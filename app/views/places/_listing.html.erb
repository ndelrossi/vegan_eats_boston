<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<% unless smart_listing.empty? %>
  
  <div class="col-md-5 col-md-push-7 text-center space-to-bottom-20">
    <div id="map" style='width: 100%; height: 300px;'></div>
  </div>

  <div id="test" class="col-md-7 col-md-pull-5">
    <ul class="places">
      <% smart_listing.collection.each_with_index do |place, index| %>
        <%= render 'places/place', :place => place, :index => index %>
      <% end %>
    </ul>
    
    <%= smart_listing.paginate %>
    <%= smart_listing.pagination_per_page_links %>
  </div>

<% else %>
  <%= "Nothing" %>
<% end %>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({
    provider: {
    },
    internal: {
      id: 'map'
    }
  },
  function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    <%= "handler.getMap().setZoom(12);" if smart_listing.count == 1 %>
  });
</script>