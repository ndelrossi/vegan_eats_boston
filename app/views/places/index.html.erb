<% provide(:title, 'Places') %>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div>
  <%= smart_listing_controls_for(:places) do %>
    <div class="place-filters space-to-bottom-20">
      <h4>Filters:</h4>
      <div class="filter input-append">
      <%= text_field_tag :filter, '', class: "search form-control", 
                                placeholder: "Search...", autocomplete: :off %>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-4 col-md-push-8 text-center">
    <div id="map" style='width: 100%; height: 300px;'></div>
  </div>
  <div class="col-md-8 col-md-pull-4">
    <%= smart_listing_render(:places) %>
  </div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({
    provider: {
      zoom: 3
    },
    internal: {
      id: 'map'
    }
  },
  function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
