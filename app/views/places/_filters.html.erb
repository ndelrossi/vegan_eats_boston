<%= smart_listing_controls_for(:places) do %>
  <div class="place-filters space-to-bottom-20">
    <div class="row">
      <div class="col-md-3">
        <h5>Search:</h5>
        <div class="filter input-append">
          <%= text_field_tag :filter, '', class: "search form-control", placeholder: "Search by name...", autocomplete: :off %>
        </div>
      </div>
      <div class="col-md-2">
        <h5>Sort by:</h5>
        <div class="radio">
          <label class="col-md-12">
            <%= radio_button_tag(:sort, "rating") %> Highest Rated
          </label>
          <label>
            <%= radio_button_tag(:sort, "name") %> Name
          </label>
        </div>
      </div>
      <div class="col-md-2">
        <h5>Cities:</h5>
        <div class="checkbox form-group">
          <label class="col-md-12">
            <%= check_box_tag("cities[]", "Boston") %> Boston
          </label>
          <label class="col-md-12">
            <%= check_box_tag("cities[]", "Brookline") %> Brookline
          </label>
          <label class="col-md-12">
            <%= check_box_tag("cities[]", "Cambridge") %> Cambridge
          </label>
          <label>
            <%= check_box_tag("cities[]", "Somerville") %> Somerville
          </label>
        </div>
      </div>
      <div class="col-md-2">
        <h5>Categories:</h5>
        <div class="checkbox form-group">
          <label class="col-md-12">
            <%= check_box_tag("categories[]", "100% Vegan") %> 100% Vegan
          </label>
          <label class="col-md-12">
            <%= check_box_tag("categories[]", "Grocery") %> Grocery
          </label>
          <label class="col-md-12">
            <%= check_box_tag("categories[]", "Indian") %> Indian
          </label>
          <label class="col-md-12">
            <%= check_box_tag("categories[]", "Juices") %> Juices
          </label>
          <label>
            <%= check_box_tag("categories[]", "Thai") %> Thai
          </label>
        </div>
      </div>
    </div>
  </div>
<% end %>