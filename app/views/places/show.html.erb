<% provide(:title, @profile.name ) %>

<div class="row">
  <div class="col-md-6 clearfix">
    <h4><%= @profile.name %></h4>
    <%= editable_description_for(@profile.place) %><br>
    <%= link_to @profile.website, "http://#{@profile.website}"%><br>
    <%= @profile.categories %><br>
    <%= map_image_for @profile.place %>
    <%= render 'places/full_address_with_links', place: @profile.place %>
    <%= write_review_button_for(@profile.place) %><br>
    <%= render 'places/review_stars', place: @profile.place %>
    <div class="place-img"><%= primary_image_for @profile.place %></div>
  </div>

  <div class="col-md-6 padding-to-top-10">
    <ul class="nav nav-tabs tabs" role="tablist">
      <li class="active"><a href="#reviews" role="tab" data-toggle="tab">Reviews</a></li>
    </ul>
    <div id='content' class="tab-content">
      <div class="tab-pane active" id="reviews">
        <% if @profile.reviews.any? %>
          <ol class="reviews">
            <%= render @profile.reviews %>
          </ol>
          <%= paginate @profile.reviews %>
        <% else %>
          <%= content_tag(:p, "There are no reviews.") %>
        <% end %>
      </div>
    </div>
  </div>
</div>

