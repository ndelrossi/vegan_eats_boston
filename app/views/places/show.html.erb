<% provide(:title, @profile.name ) %>

<div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 no-padding">

  <div class="media">
  <a class="pull-left place-img hidden-xs">
    <%= primary_image_for @profile.place %>
  </a>
  <div class="media-body">
      <h3 class="media-heading"><%= @profile.name %></h3>
      <%= @profile.categories %><br>
      <%= editable_description_for(@profile.place) %>
    <div class="pull-right text-right">
      <br><%= render 'shared/stars_for_place', place: @profile.place %>
    </div>
  </div>
  </div>
  <%= map_image_for(@profile.place, width: 640, height: 220, scale: 2) %>

</div>
