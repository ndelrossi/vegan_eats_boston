<% provide(:title, @place_profile.place.name ) %>

<div class="row space-to-bottom-40">
  <div class="col-md-6 clearfix">
    <h4><%= @place_profile.place.name %></h4>
    <%= best_in_place_if signed_in? && current_user.admin?,
          @place_profile.place, 
          :description, 
          :path => admin_place_path(@place_profile.place), 
          :type => :textarea, 
          :nil => "Click here to add description." %>
    <br>
    <%= link_to @place_profile.place.url_website, "http://#{@place_profile.place.url_website}"%><br>
    <%= @place_profile.place.category_list %><br>

    <%= map_image_for @place_profile.place %>

    <address><%= full_address_to_html_for @place_profile.place %></address>

    <address> 
      Phone number: <%= @place_profile.place.phone_number %><br>
      <%= link_to "Menu", "http://#{@place_profile.place.url_menu}"%><br>
    </address>

    <div id=<%= "star_" + @place_profile.place.id.to_s %>></div>
    <div class="text" class="text-right">
      (<%= pluralize(@place_profile.place.reviews_count, 'review') %>)<br><br>
      <%= link_to "Write review", new_or_edit_review_path(@place_profile.place), class: "btn btn-default" if signed_in? %><br><br>
    </div>

    <div class="place-img">
      <%= image_tag @place_profile.place.primary_image.url%>
    </div>
  </div>

  <div class="col-md-6 padding-to-top-10">
    <ul class="nav nav-tabs tabs" role="tablist">
      <li class="active"><a href="#reviews" role="tab" data-toggle="tab">Reviews</a></li>
    </ul>
    <div id='content' class="tab-content">
      <div class="tab-pane active" id="reviews">
        <% if @place_profile.reviews.any? %>
          <ol class="reviews">
            <%= render @place_profile.reviews %>
          </ol>
          <%= paginate @place_profile.reviews %>
        <% else %>
          <%= content_tag(:p, "There are no reviews.") %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#star_<%= @place_profile.place.id.to_s %>').raty({
    readOnly: true,
    score: <%= @place_profile.place.rating %>,
    path: '/assets'
  });

  $(".best_in_place").best_in_place();
</script>
