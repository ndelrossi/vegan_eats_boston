<header>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#nav-links">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to image_tag("veb_logo.png", alt: "Vegan Eats Boston"), root_path, id: "logo" %>
        </div>

        <div class="navbar-collapse collapse" id="nav-links">
          <ul class="nav navbar-nav navbar-right">
            <li class="<%= 'active' if current_page?(root_path) %>">
              <%= link_to "Home", root_path %>
            </li>
            <li class="<%= 'active' if current_page?(places_path) %>">
              <%= link_to "Places", places_path %>
            </li>
            <li class="<%= 'active' if current_page?(blog_path) %>">
              <%= link_to "Blog", blog_path %>
            </li>
            <li class="<%= 'active' if current_page?(about_path) %>">
              <%= link_to "About",   about_path %>
            </li>
            <% if signed_in? %> 
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.name %><b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Create Post", new_post_url %></li>
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                    <% if current_user.admin? %>
                      <li><%= link_to "Admin Page", admin_path %></li>
                      <li class="divider"></li>
                    <% end %>
                  <li>
                    <%= link_to "Sign out", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Sign in", signin_path %></li>
              <li><%= button_to "Sign up", signup_path, :method => "get", class: "btn btn-primary navbar-btn" %></li>
            <% end %>
          </ul>
        </div>  
      </div>
  </nav>
</header>