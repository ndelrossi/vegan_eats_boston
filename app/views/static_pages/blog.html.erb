<% provide(:title, 'Blog') %>

<div class="row">
  <article class= "col-md-9">
    <% if @posts.any? %>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= paginate @posts %>
    <% end %>
  </article>
  <div class= "col-md-3">
    <h4>Recent posts</h4>
    <ul class="list-unstyled">
      <% @posts.each do |post| %>
        <li><%= link_to post.title, post %></li>
      <% end %>
    </ul>
  </div>
</div>