<% provide(:title, 'Create Place') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Create Place</h1>
    
    <div class="form-group">
      <%= form_for [:admin, @place] do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        
        <div class="form-group">
          <%= f.label 'Name' %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Primary Image" %>
          <%= f.file_field :primary_image, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label 'Website URL' %>
          <%= f.text_field :url_website, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label 'Website URL to menu' %>
          <%= f.text_field :url_menu, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label 'Address (line 1)' %>
          <%= f.text_field :address_line_1, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label 'Address (line 2)' %>
          <%= f.text_field :address_line_2, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label 'City' %>
          <%= f.text_field :address_city, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label 'Zip code' %>
          <%= f.text_field :address_zip_code, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label 'Phone number' %>
          <p>Use the format (555) 555-5555</p>
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label 'Categories' %>
          <p>Separate with commas, e.g. Pizza, Smoothies</p>
          <%= f.text_field :category_list, class: "form-control" %>
        </div>
        
        <%= f.submit "Create place", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
